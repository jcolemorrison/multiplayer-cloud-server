  "license": "MIT",
  "devDependencies": {
    "@colyseus/loadtest": "^0.15.2",
    "@colyseus/testing": "^0.15.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mocha": "^8.2.3",
    "copyfiles": "^2.4.1",
    "mocha": "^9.0.2",
    "rimraf": "^2.7.1",
    "tsx": "^3.12.7",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@colyseus/arena": "^0.15.0-preview.1",
    "@colyseus/monitor": "^0.15.6",
    "@colyseus/redis-presence": "^0.15.4",
    "@colyseus/tools": "^0.15.35",
    "colyseus": "^0.15.15",
    "cors": "^2.8.5",
    "express": "^4.16.4"
  }
